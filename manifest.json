{

	"manifest_version": 2,
	"name": "JiraCopySummary",
	"version": "1.0",
	"homepage_url":"https://github.com/ElersA/JiraCopySummary",
	"description": "Copies an issues tag and summary to clipboard via a shortcut. Source code available at ",
	"icons": {
		"48": "icons/icons8-copy-48.png",
		"96": "icons/icons8-copy-96.png"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["JiraCopySummary.js"]
		}
	],

	"browser_action": {
		"default_icon": {
			"19": "icons/icons8-copy-19.png",
			"38": "icons/icons8-copy-38.png"
		},
		"default_popup": "popup/dialog.html",
		"default_title": "JiraCopySummary",
		"browser_style": true
	},

	"permissions": [
		"*://*/*",
		"clipboardWrite"
	]

}